<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator"
    android:theme="@style/Theme.Calculator.Dark">
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"
        android:text=""
        android:textSize="24sp"
        android:textAlignment="textEnd"
        android:textColor="#818181"
        android:fontFamily="@font/poppins_medium"
        />
    <LinearLayout
        android:id="@+id/number_pad"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearAll"
                style="@style/Theme.Calculator.Dark.Button"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/ac"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />
            <ImageButton
                android:id="@+id/clearScreen"
                style="@style/Theme.Calculator.Dark.Button"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:importantForAccessibility="no"
                android:src="@drawable/vector2"
                android:padding="25dp"
                android:textSize="23sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divide"
                style="@style/Theme.Calculator.Dark.Button2"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/slash"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiply"
                style="@style/Theme.Calculator.Dark.Button2"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:text="@string/asterik"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_7"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_8"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_9"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minus"
                style="@style/Theme.Calculator.Dark.Button2"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:text="@string/minus"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck,TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_4"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_5"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_6"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plus"
                style="@style/Theme.Calculator.Dark.Button2"
                android:layout_width="62dp"
                android:layout_height="96dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:text="@string/plus"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_1"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck,TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_2"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_3"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equal"
                style="@style/Theme.Calculator.Dark.Button2"
                android:layout_width="62dp"
                android:layout_height="96dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/equal"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="144dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/_0"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/point"
                style="@style/Theme.Calculator.Dark.Button3"
                android:layout_width="144dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:text="@string/point"
                android:textColor="#38B9FF"
                android:textSize="23sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>