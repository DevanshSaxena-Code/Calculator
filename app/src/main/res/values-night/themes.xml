<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Calculator.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/linear_dark</item>
    </style>
    <style name="Theme.Calculator.Dark.Button">
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#A5A5A5</item>
        <item name="android:background">@drawable/calculator_button</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="Theme.Calculator.Dark.Button2">
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#109DFF</item>
        <item name="android:background">@drawable/calculator_button_2</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.Calculator.Dark.Button3">
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#29A8FF</item>
        <item name="android:background">@drawable/calculator_button_3</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
</resources>